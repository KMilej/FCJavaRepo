package collaction;

public class ControllerTest {

	public void runTest() {
		
		String formattedString = String.format("the answer is %.4f", 24.54323090);
		
		System.out.println(formattedString);
		
		String endString = "per box";
		
		String eggs = String.format("Today's eggs are %.2f %s", 2.7876, endString);
		
		System.out.println(eggs);
		
		//create spaces
		
		String empTable = String.format("%20s %10d %30s", "John Smith", 2343, "Manager");
		
		System.out.println(empTable);
		System.out.println();
		
		System.out.printf("hello %s you aree %d feet tall \n", "Jacqui", 7);
		
		// special characters
		
		System.out.println("everyone say rats are \"plague spreaders\" but we know this isn't true");
		
		System.out.println("the blackslash \\ is a special character");
		
		System.out.println("..\\myfolder\\myfile.txt");
	}
}

